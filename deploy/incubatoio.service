# Systemd Service for Incubatoio Backend
# Copy to: /etc/systemd/system/incubatoio.service

[Unit]
Description=Incubatoio Manager Backend
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/incubatoio/backend
Environment="PATH=/var/www/incubatoio/backend/venv/bin"
ExecStart=/var/www/incubatoio/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
